<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @issue.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @issue.body %>
</p>


<p>
  <strong>Dept status:</strong>
  <%= @issue.dept_status %>
</p>

<p>
  <strong>Student status:</strong>
  <%= @issue.student_status %>
</p>

<p>
  <strong>Status:</strong>
  <%= @issue.status %>
</p>

<p>
  <strong>Bounce counter:</strong>
  <%= @issue.bounce_counter %>
</p>

<p>
  <strong>Created:</strong>
  <%= @issue.time_ago %>
</p>

<% if user_signed_in? && current_user.role != 'student' %>
  <%= link_to "Add comment", new_issue_comment_path %><br><br>
  <% @comments.each do | c |  %>
    <div id="comment_<%= c.id %>">
      <h2><%= c.faculty.email %>: <%= c.title  %></h2>
      <p><%= c.body %></p>
    </div>
  <% end %>
<% end %>
<%= link_to 'Back', issues_path %>
