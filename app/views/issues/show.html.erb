<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" media="all" />

<p id="notice"><%= notice %></p>

<div class="container">
  <p id="notice"><%= notice %></p>
  <p>
  <h3><%= @issue.title %></h3>
  <p><h4> &nbsp; <%= @issue.body %></h4></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <strong>Issue</strong>
  </div>
  <div class="panel-body">
    <%# <div> %>
    <%#   <strong>Title:</strong> %>
    <%#   <%= @issue.title %1> %>
    <%# </div> %>
    <%# <div> %>
      <%# <strong>Body:</strong> %>
      <%# <%= @issue.body %1> %>
    <%# </div> %>
    <div>
      <strong>Dept status:</strong>
      <%= @issue.dept_status %>
    </div>
    <div>
      <strong>Student status:</strong>
      <%= @issue.student_status %>
    </div>
    <div>
      <strong>Status:</strong>
      <%= @issue.status %>
    </div>
    <div>
      <strong>Bounce counter:</strong>
      <%= @issue.bounce_counter %>
    </div>
    <div>
      <strong>Created:</strong>
      <%= @issue.time_ago %>
    </div>
  </div>
</div>

  <%= link_to 'Back', issues_path, class: 'btn btn-primary'%>
  <%= link_to 'Destroy', @issue, method: :delete, data: { confirm: 'Are you sure?' }, id:'destroy', class: 'btn btn-primary' %>

  <% if user_signed_in? && current_user.role != 'student' %>
      <%= link_to "Add comment/Transfer", new_issue_comment_path %><br><br>

    <% if @comments.length > 0 %> 
        <h4>Comments:</h4>

      <table class="table table-hover">
        <thead>
            <tr>
              <th>Faculty</th>
              <th>Title</th>
              <th>Content</th>
            </tr>
        </thead>
          <% @comments.each do | c |  %>
            <tr>
              <div class="container" id="comment_<%= c.id %>">
              <td><h5><%= c.faculty.email %></h5></td>
              <td><h5><%= c.title  %></h5></td>
              <td><h5><i><%= c.body %></h5></i></td>
              </div>
          <% end %>
      </table>
    <% end %>
  <% end %>
</div>

