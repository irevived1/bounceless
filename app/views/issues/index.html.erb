<div class="container center">
  <p id="notice"><%= notice %></p>

  <div class="panel panel-default">
    <div class="panel-heading"><h3>Issues</h3></div>
    <div class="panel-body">
      <p>You can track your issues here.</p>
    </div>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Status</th>
          <th>Bounce counter</th>
          <th>Created</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% if @issues %>
          <% @issues.each do |issue| %>
            <tr>
              <td><%= issue.title %></td>
              <td><%= issue.body %></td>
              <td><%= issue.status %></td>
              <td><%= issue.bounce_counter %></td>
              <td><%= issue.time_ago %></td>
              <td><%= link_to 'Show', issue %></td>
              <td><%#= link_to 'Edit', edit_issue_path(issue) %></td>
              <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
  <% if current_user.role == "student" %>
    <%= link_to 'New Issue', choose_department_path , class: 'btn btn-primary' %>
  <% end %>
</div>
